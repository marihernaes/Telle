<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customized color palette.-->
        <!-- Note: New names of colors in MaterialDesign: colorAccent is colorSecondary-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>


        <!-- Slightly darker surface color. -->
        <item name="android:colorBackground">@color/softBlueishGray</item>
        <item name="backgroundTint">@color/softerBlueishGray</item>

    <!-- Apply the styles underneath to all components. -->
        <item name="cardViewStyle">@style/AppTheme.Card</item>

    </style>

    <!-- Theme of the CardView. -->
    <style name="AppTheme.Card" parent="AppTheme">
        <item name="android:background">@color/cardColor</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">8dp</item>
    </style>

</resources>